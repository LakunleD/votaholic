                    <ul class="nav navbar-nav navbar-right">
                    <li><a href="/explore">Explore Polls</a></li>                            
                    <% if (username.length <= 0) { %>
                        <li><a href="/login">Login</a></li>
                        <li><a href="/signup">Signup</a></li>
                    <% } else { %>
                        <li><a href="/new-poll">New Poll</a></li>
