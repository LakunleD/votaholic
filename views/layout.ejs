                            <% if (username.length <= 0) { %>
                                <li><a href="/login">Login</a></li>
                                <li><a href="/signup">Signup</a></li>                            
                            <% } else { %>
                                <li><a href="/new-poll">New Poll</a></li>
                                <li><a href="/my-polls">My Polls</a></li>  
                                <li><a href="/logout">Logout</a></li>
                            <% } %>
