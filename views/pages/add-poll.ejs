<section class="container-fluid">
  <div class="form-container col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-6">
      <h2>New Poll</h2>
      <form action="/add-poll" method="post">
        <div class="form-group">
          <label for="inputPollTitle">Poll Title</label>
          <input type="text" name="title" class="form-control" placeholder="Enter poll title">
        </div>
        <div class="form-group">
          <label for="inputOptions">Options</label>
          <input type="text" name="options" class="form-control" placeholder="Enter Options separated by comma">            
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
  </div>
</section>